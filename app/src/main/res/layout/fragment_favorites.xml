<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="workoutViewModel"
            type="com.example.workout.viewmodel.WorkoutViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".fragments.Favorites">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Favorite workout"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginStart="12dp"
            android:text="What workout are you searching ?"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/inputUsr"
            android:layout_width="340dp"
            android:layout_height="40dp"
            android:layout_below="@id/question"
            android:layout_marginStart="12dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/search_bar_view"
            android:fontFamily="sans-serif"
            android:hint="Keyword (muscles)"/>

        <ImageButton
            android:id="@+id/searchButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="14dp"
            android:layout_marginStart="365dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_search_white"
            android:layout_below="@id/question"
            android:background="@drawable/rounded_corner_green"/>


    </RelativeLayout>

</layout>