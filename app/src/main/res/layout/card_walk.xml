<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="15dp"
    android:background="@drawable/rounded_card"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:elevation="7dp"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Walk"
            android:textSize="17dp"
            android:textStyle="normal"
            android:textColor="?attr/colorPrimary"
            tools:text="Walk" />

        <TextView
            android:id="@+id/textViewWalk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorPrimary"
            android:layout_marginTop="5dp"
            android:text="6872 steps"
            android:textSize="19dp"
            android:textStyle="bold" />

        <com.db.williamchart.view.HorizontalBarChartView
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="-20dp"
            app:chart_spacing="20dp"
            app:chart_axis="none"
            app:chart_barsColor="@color/green"
            app:chart_barsBackgroundColor="@color/gray"
            app:chart_barsRadius="12dp"/>


    </LinearLayout>

</FrameLayout>