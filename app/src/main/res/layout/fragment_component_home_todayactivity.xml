<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@android:color/transparent"
    android:weightSum="3">

    <!-- Training Time Card -->
    <LinearLayout
        android:layout_width="14dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_weight="2"
        android:background="@drawable/bg_card"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/trainingTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Training time"
            android:textColor="@color/text_primary"
            android:textSize="16sp" />

        <!-- Custom Circular Progress Bar Placeholder -->
        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">
            <!-- Replace this with your actual circular progress bar implementation -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/circular_progress_placeholder" />

            <TextView
                android:id="@+id/trainingTimeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="90 min"
                android:textColor="@color/text_secondary"
                android:textSize="18sp"
                android:textStyle="bold" />
        </FrameLayout>

        <!-- Add Training Text -->
        <TextView
            android:id="@+id/addTrainingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Add a training +"
            android:textColor="@color/text_link"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Container for Active Calories and Walk Cards -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="8dp">

        <!-- Active Calories Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:padding="16dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/activeCaloriesText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Active calories"
                android:textColor="@color/text_primary"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/activeCaloriesValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="867 cal"
                android:textColor="@color/text_secondary"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Walk Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:padding="16dp">

            <TextView
                android:id="@+id/walkText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Walk"
                android:textColor="@color/text_primary"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/walkValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6587 steps"
                android:textColor="@color/text_secondary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Horizontal ProgressBar for steps -->
            <ProgressBar
                android:id="@+id/walkProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progressDrawable="@drawable/progress_bar"
                android:max="10000"
                android:progress="6587"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>