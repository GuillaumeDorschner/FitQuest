<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_page_new_workout">

    <TextView
        android:id="@+id/textViewWhatToWork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What do you want to work?"
        android:layout_margin="16dp"/>

    <EditText
        android:id="@+id/editTextWorkout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Dos, Abdos"
        android:layout_below="@id/textViewWhatToWork"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/buttonRun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Run"
        android:layout_below="@id/editTextWorkout"
        android:layout_margin="16dp"/>

    <TextView
        android:id="@+id/textViewPersonalCoach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personal Coach"
        android:layout_below="@id/buttonRun"
        android:layout_margin="16dp"/>

    <TextView
        android:id="@+id/textViewResponse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewPersonalCoach"
        android:layout_margin="16dp"/>
</RelativeLayout>
