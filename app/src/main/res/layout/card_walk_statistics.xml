<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:background="@drawable/rounded_card"
    android:elevation="7dp"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewChartTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Walk"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            />

        <TextView
            android:id="@+id/textViewChartSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
        android:text=" - 8000 steps/day"
        android:textSize="12sp"
        android:textStyle="italic"
        android:textColor="?attr/colorPrimary"
        tools:text="- 8000 steps/day" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/totalStepsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total steps"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:gravity="center_horizontal"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="90"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="19dp"
                        android:textStyle="bold"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="min"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="19dp"
                        android:textStyle="bold"
                        android:gravity="center" />
                </LinearLayout>

                <com.db.williamchart.view.DonutChartView
                    android:id="@+id/chartDonut1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="0dp"
                    app:chart_donutBackgroundColor="@color/gray"
                    app:chart_donutTotal="100"
                    app:chart_donutRoundCorners="true"
                    app:chart_donutThickness="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/HighestText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Highest"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary" />

            <TextView
                android:id="@+id/dayText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wednesday"
                android:textSize="12sp"
                android:textStyle="normal"
                android:textColor="?attr/colorPrimary" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:gravity="center_horizontal"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="90"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="19dp"
                        android:textStyle="bold"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="min"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="19dp"
                        android:textStyle="bold"
                        android:gravity="center" />
                </LinearLayout>

                <com.db.williamchart.view.DonutChartView
                    android:id="@+id/chartDonut2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="0dp"
                    app:chart_donutBackgroundColor="@color/gray"
                    app:chart_donutTotal="100"
                    app:chart_donutRoundCorners="true"
                    app:chart_donutThickness="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/LowestText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lowest"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary" />

            <TextView
                android:id="@+id/LowestDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saturday"
                android:textSize="12sp"
                android:textStyle="normal"
                android:textColor="?attr/colorPrimary" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:gravity="center_horizontal"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="90"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="19dp"
                        android:textStyle="bold"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="min"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="19dp"
                        android:textStyle="bold"
                        android:gravity="center" />
                </LinearLayout>

                <com.db.williamchart.view.DonutChartView
                    android:id="@+id/chartDonut3"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="0dp"
                    app:chart_donutBackgroundColor="@color/gray"
                    app:chart_donutTotal="100"
                    app:chart_donutRoundCorners="true"
                    app:chart_donutThickness="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>


    </LinearLayout>
</FrameLayout>